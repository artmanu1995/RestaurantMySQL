<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="test.jakkit.restaurant.ListOrderActivity">

    <LinearLayout
        android:id="@+id/linTop"
        android:layout_width="fill_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtShowOfficer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:text="New Text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtShowDateTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal"
            android:text="New Text"
            android:textSize="16sp"
            android:textStyle="italic" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtShowTable"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal"
            android:text="New Text"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtIdFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center_vertical|center_horizontal"
            android:text="FOOD_ID"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:gravity="center_vertical|center_horizontal"
            android:text="FOOD"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.21"
            android:gravity="center_vertical|center_horizontal"
            android:text="PRICE"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.08"
            android:text="VOLUME"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linOrder"
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:weightSum="1"
        android:layout_weight="0.64">

        <TextView
            android:id="@+id/txtShowNumFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="New Text"
            android:textSize="16sp"
            android:layout_weight="0.17" />

        <TextView
            android:id="@+id/txtShowFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.46"
            android:gravity="center_vertical|center_horizontal"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtShowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="New Text"
            android:textSize="16sp"
            android:layout_weight="0.10" />

        <TextView
            android:id="@+id/txtShowVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="New Text"
            android:textSize="16sp"
            android:layout_weight="0.16" />


    </LinearLayout>

    <Button
        android:id="@+id/btt_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:elevation="0dp"
        android:onClick="Click"
        android:text="ยืนยันการสั่งอาหาร"
        android:textSize="18sp" />
</LinearLayout>
